<h1>Все игры</h1>
<h3>@Model.currCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (var game in Model.allGames)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@game.img" alt ="@game.name" />
                <h2>@game.name</h2>
                <p>@game.shortDesc</p>
                <p>Цена: @game.price.ToString("c")</p>
                <p><a class="btn btn-warning" href="#">Подробнее</a></p>
            </div>
        }
    }
</div>
   